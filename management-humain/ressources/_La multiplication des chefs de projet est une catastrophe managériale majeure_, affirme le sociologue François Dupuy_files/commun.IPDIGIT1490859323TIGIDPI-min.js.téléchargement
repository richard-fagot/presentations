$(document).ready(function(){var largeur_fenetre=$(window).width();if(largeur_fenetre>=768){$(".carouselHome").owlCarousel({items:1,loop:true,margin:30,nav:false,dots:true,autoplay:true,autoplayTimeout:5000,autoplayHoverPause:true});}else{$(".carouselHome").owlCarousel({items:1,loop:true,margin:30,nav:true,dots:true,dotsEach:true,autoplay:true,autoplayTimeout:5000,autoplayHoverPause:true});}$(".carouselHome").hover(function(){$(".carouselHome .socialBar").slideToggle("slow");});function closeContainerOngletSsMenu(){$("#faqAbonne_tab").css("display","none");$("#autresContacts_tab").css("display","none");$("#serviceAbo_tab").css("display","none");return false;}closeContainerOngletSsMenu();$("#serviceAbo_tab .lienContact").on("click",function(){closeContainerOngletSsMenu();$(".servAbo").removeClass("active");$(".faqAbo").addClass("active");$("#faqAbonne_tab").css("display","block");return false;});$("#faqAbonne_tab .lienContact").on("click",function(){closeContainerOngletSsMenu();$(".servAbo").addClass("active");$(".faqAbo").removeClass("active");$("#serviceAbo_tab").css("display","block");return false;});$("#serviceAbo_tab").css("display","block");$(".menuOnglet li a").on("click",function(){$(".menuOnglet li a").removeClass("active");$(this).addClass("active");closeContainerOngletSsMenu();if($(this).hasClass("servAbo")==true){$("#serviceAbo_tab").css("display","block");}if($(this).hasClass("faqAbo")==true){$("#faqAbonne_tab").css("display","block");}if($(this).hasClass("autresContacts")==true){$("#autresContacts_tab").css("display","block");}return false;});function hideAllFAQResponse(){$(".responseFaq").each(function(){$(this).css("display","none");});return false;}hideAllFAQResponse();$(".numerote").on("click",function(){hideAllFAQResponse();var index=$(".numerote").index(this);var parentDiv=$(this).parent("div").find(".responseFaq");$(parentDiv[index]).toggle("600");$("html, body").animate({scrollTop:$(parentDiv[index]).offset().top-$(".slicknav_menu").outerHeight()-$(".rondDeco").outerHeight()-20},2000);return false;});$("#jqMonCompteDeconnect").click(function(){$.ajax({url:"/ajax.php?method=deconnexion",method:"post"}).done(function(){$.ajax({url:"/mon-compte-edito/deconnexion",method:"post",data:{noReturn:1,urlRetour:document.location.href}}).done(function(){location.reload();});});return false;});$(".buttonConnect, .pictoUserNonCo").click(function(){$(".formConnexion").toggle("600");return false;});$(".formConnexion .closeFormConnection").click(function(){$(".formConnexion").hide();return false;});var cookiePopin=App.Cookie.get("COOKIE_POPIN");if(!cookiePopin&&checkCookiePopinUnConnect){var today=new Date();var tommorow=new Date();tommorow.setDate(tommorow.getDate()+1);App.Cookie.set("COOKIE_POPIN",true,tommorow.getTime()-today.getTime());jQuery("#jqPopinConnect").show();}jQuery(".jqClosePopinConnect").click(function(){jQuery("#jqPopinConnect").hide();return false;});$(document).mouseup(function(e){var container=$(".formConnexion");if(!container.is(e.target)&&container.has(e.target).length===0){container.hide();}});$("input,textarea").focus(function(){$(this).data("placeholder",$(this).attr("placeholder")).attr("placeholder","");}).blur(function(){$(this).attr("placeholder",$(this).data("placeholder"));});$("#connexion_form").submit(function(event){jQuery("#jqErrorLoginPassword").addClass("displayNone");$.ajax({url:"/mon-compte-edito/ws",method:"post",dataType:"json",data:{identifiant:$("#identifiant").val(),password:$("#password").val(),urlRetour:$("#urlRetour").val()}}).done(function(response){if(response.token!=undefined){location.reload();}else{jQuery("#jqErrorLoginPassword").removeClass("displayNone");}});return false;});$(".jqFormSearch").submit(function(){var queryString=$(this).find(".jqSearchQuery").val();if(queryString){window.location="/recherche="+queryString;}return false;});$(".jsBtnValidFormSearch").click(function(){$(this).parent("form").submit();return false;});$(".icoSearch").click(function(){$(".formRecherche").toggle(600);return false;});$(".formRecherche .closeFormSearch").click(function(){$(".formRecherche").hide();return false;});$(document).mouseup(function(e){var container=$(".formRecherche");if(!container.is(e.target)&&container.has(e.target).length===0){container.hide();}});$("#newsletter_thematique_form").submit(function(){var data=$(this).serialize();window.App=window.App||{};App.Forms=App.Forms||{};App.Forms.FormList=App.Forms.FormList||{};App.Forms.FormList.newsletter_thematique_form_postValidation=function(isValid){if(isValid){$.ajax({url:"/ajax.php?method=postNewsletterThematique",method:"post",data:data}).done(function(data){hasError=false;if(data.response.errorCode){hasError=true;switch(data.response.errorCode){case 1:message="Erreur lors de l'exécution de votre demande";break;default:message="Vous êtes déjà abonné à ce newsletter";}}else{message="Votre inscription a été prise en compte";}if(hasError){$(".aboNewsThematique").addClass("error");}$(".aboNewsThematique").html("<p>"+message+"</p>");});}};return false;});if(jQuery().bxSlider){$(".blocDepeches .listeBloc, .appelsDoffres .listeBloc").bxSlider({minSlides:5,maxSlides:100,slideWidth:300,slideMargin:10,ticker:true,mode:"vertical",tickerHover:true,useCSS:false,speed:5000*7});}});