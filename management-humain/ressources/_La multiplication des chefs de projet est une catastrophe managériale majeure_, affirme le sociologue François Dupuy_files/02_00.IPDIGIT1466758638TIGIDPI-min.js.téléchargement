$(document).ready(function(){initArticle=function(){App.Sharing();App.SharingMail();};initArticle();var hash=document.location.href.substring(document.location.href.indexOf("#")+1);if(hash=="commentForm"){$("html, body").animate({scrollTop:$(".formCommentaires").offset().top-210},200);$(".jqCommentForm").slideToggle();$("#pseudo").focus();}$(".jqBtnCommentForm").click(function(e){$(".jqCommentForm").slideToggle();if($(".jqCommentForm").hasClass("displayNone")){$(".jqCommentForm").removeClass("displayNone");}else{$(".jqCommentForm").addClass("displayNone");}});if(jQuery(".jqCommentForm").length){jQuery(".jqAnswerComment").click(function(){parentId=jQuery(this).data("id-parent");parentAuthor=jQuery(this).data("author-parent");if(parentId){$("#parent_id").val(parentId);$("#jqMessageResponse").html("Repondre au commentaire de : "+parentAuthor).show();if($(".jqCommentForm").hasClass("displayNone")){$(".jqCommentForm").slideToggle();}$("#pseudo").focus();}return false;});}$("#connexion_form_abonne").submit(function(event){jQuery(".lerreur").hide();if($("#identifiant_article").val()==""||$("#password_article").val()==""){jQuery(".lerreur").html("Veuillez saisir votre email et votre mot de passe.");jQuery(".lerreur").show();return false;}$.ajax({url:"/mon-compte-edito/ws",method:"post",dataType:"json",data:{identifiant:$("#identifiant_article").val(),password:$("#password_article").val(),urlRetour:$("#urlRetour_article").val()}}).done(function(response){if(response.token!=undefined){location.reload();}else{jQuery(".lerreur").show();}});return false;});$("#jqBtnLireSuite").click(function(){($(this).text()=="Masquer")?$(this).text("Lire la suite"):$(this).text("Masquer");($(this).text()=="Lire la suite")?$(".comHide").addClass("displayNone"):$(".comHide").removeClass("displayNone");});if(jQuery().bxSlider){$(".sliderSommaire").bxSlider({mode:"vertical",slideWidth:300,minSlides:2,slideMargin:10,slideSelector:".sliderSommaire li",infiniteLoop:false,hideControlOnEnd:true,pager:false});$(".sliderGallery .contenuBloc").bxSlider({mode:"horizontal",slideWidth:100,minSlides:4,maxSlides:4,moveSlides:1,slideMargin:10,slideSelector:".sliderGallery .contenuBloc a",infiniteLoop:true,hideControlOnEnd:true,pager:false});}if(App.hasScrollInfinite&&App.idDocument){window.App=window.App||{};App.Dispatch=App.Dispatch||{};App.Dispatch.historyUrl=[window.location.href];$("body footer").infiniteScroll({url:"/ajax.php?method=getNextDocument&id_document="+App.idDocument,container:".footer"},function(data){if(data.response.url!=undefined){App.Dispatch.ajaxUrl.push(data.response.url);}initArticle();oas_tag.reloadAds();});$(window).scroll(function(){var windowTop=$(window).scrollTop();var countElements=0;$(".pageArticle").each(function(){var top=$(this).offset().top;var bottom=top+$(this).height();if(bottom-100>windowTop){var url=App.Dispatch.ajaxUrl[countElements];if(window.location.href!=url){var title=$("h1.titreArt9",$(this)).text();document.title=title;if($.inArray(url,App.Dispatch.historyUrl)==-1){window.history.pushState({page:countElements},title,url);App.Dispatch.historyUrl.push(url);}else{document.title=title;window.history.replaceState({page:countElements},title,url);}}return false;}countElements++;});});}});